#!/usr/bin/env ruby
# LIFX Console
$LOAD_PATH << File.join(File.dirname(__FILE__), "..", "lib")
require 'lifx'
require 'rubygems'
begin
  require 'pry'
rescue LoadError
  $stderr.puts("You must have pry installed to use lifx-console. gem install pry")
end

c = LIFX::Client.lan
c.discover!
c.extend(LIFX::Colors)
c.pry
